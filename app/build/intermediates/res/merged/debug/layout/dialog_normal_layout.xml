<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_white"
    android:orientation="vertical" >

    <!-- android:background="@drawable/table_cell_bg"-->
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/title_alert"
        android:textColor="@color/dialog_title_black"
        android:textSize="20sp"
        android:textStyle="bold" 
        android:visibility="gone"/>

    <TextView
        style="@style/home_black_little_style"
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <View style="@style/style_line_divide_horizontal_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            style="@style/home_dialog_style"
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            />

        <View style="@style/style_line_divide_vertical_style" />

        <Button
            style="@style/home_dialog_style"
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>