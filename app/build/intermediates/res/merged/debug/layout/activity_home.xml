<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/home_header"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_officer_manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/patrol_officer_manager"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_notice_manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/notice_manager"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_reshoot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/reshoot"
            android:scaleType="fitXY"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_emergency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_tv_bg"
            android:gravity="center_vertical"
            android:text="@string/emergency"
            android:drawableLeft="@drawable/emergency"
            android:drawablePadding="15dp"
            android:paddingLeft="30dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font15"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/tab_tv_bg"
            android:text="@string/setting"
            android:drawableLeft="@drawable/setting"
            android:textColor="@color/text_color"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:paddingLeft="30dp"
            android:textSize="@dimen/font15"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>